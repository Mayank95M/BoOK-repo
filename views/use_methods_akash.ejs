<%- include('partials/header_akash2') %>

<div class="min-h-screen bg-white p-8">
    
    <!-- Heading aligned top-left -->
    <div class="mb-20">
        <h1 class="text-5xl font-semibold text-gray-900 md:text-5xl lg:text-5xl">
            Use Methods
        </h1>
        <h2 class="text-xl text-gray-700 md:text-2xl lg:text-2xl mt-2">
            Remede can be used as support to learn and use design methods
        </h2>
    </div>

    <!-- Responsive Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-12">
<% useMethods.forEach(method => { %>
    <div class="w-64 bg-gray-300 border border-gray-400 rounded-lg shadow-sm hover:bg-white transition duration-300">
        <a 
            href="<%= method.id === 1 ? '/search-filter-methods' : (method.id === 2 ? '/design-frameworks' : '#') %>" 
            class="flex flex-col items-center p-6 h-full"
        >
            <h5 class="text-xl text-gray-900 text-center"><%= method.name %></h5>
        </a>
    </div>
<% }); %>

    </div>

</div>

<%- include('partials/footer') %>
